<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/mainLayout"
        tools:context="com.example.android.tourguide.MainActivity">

    <TextView
            style="@style/mainTxtTheme"
            android:text="@string/appWelcomeTxt"
            android:id="@+id/textView" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bkm"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonTxt"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:id="@+id/openTourBtn" />

</LinearLayout>
